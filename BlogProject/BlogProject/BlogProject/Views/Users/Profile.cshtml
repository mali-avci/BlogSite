@model BlogProject.Entity.User
<div class="row justify-content-center mt-4">
    <div class="col-lg-3">
        <div class="card shadow-sm border-0 text-center">
            <div class="card-body">
                <img src="~/img/@Model.Image" class="rounded-circle img-fluid mb-3" style="width: 120px; height: 120px; object-fit: cover;" alt="@Model.Name" />
                <h4 class="fw-bold">@Model.Name</h4>
                <p class="text-muted">@Model.UserName</p>
                @if (!string.IsNullOrWhiteSpace(Model.About))
                {
                    <hr />
                    <p class="small text-muted" style="white-space: pre-wrap;">@Model.About</p>
                }
                <!-- Profil Bilgilerimi Güncelle Butonu: Kayıt sayfasına yönlendirir -->
                <a href="/Users/Register?username=@Model.UserName" class="btn btn-primary btn-sm mt-3">
                    <i class="bi bi-pencil-square"></i> Profil Bilgilerimi Güncelle
                </a>
            </div>
        </div>
    </div>
    <div class="col-lg-9">
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-body">
                <h5 class="mb-3"><i class="bi bi-file-earmark-text"></i> Yayınlanan Gönderiler</h5>
                @if (Model.Posts != null && Model.Posts.Any())
                {
                    <div class="row row-cols-1 row-cols-md-2 g-3">
                        @foreach (var post in Model.Posts)
                        {
                            <div class="col">
                                <div class="card h-100 shadow-sm border-0">
                                    <div class="row g-0">
                                        <div class="col-4">
                                            <img src="~/img/@post.Image" class="img-fluid rounded-start" style="height: 100%; object-fit: cover;" alt="@post.Title">
                                        </div>
                                        <div class="col-8">
                                            <div class="card-body">
                                                <h6 class="card-title">@post.Title</h6>
                                                <p class="card-text small text-muted">@post.PublishedOn.ToString("dd MMM yyyy")</p>
                                                <a href="/blogs/@post.Url" class="stretched-link"></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted">Henüz gönderi bulunmamaktadır.</p>
                }
            </div>
        </div>
    </div>
</div>